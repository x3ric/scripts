#!/bin/bash
# Kali Wm Qemu Launcher
IMG_PATH="~/Documents/Wm/kali-linux-2024.4-qemu-amd64.qcow2" # https://cdimage.kali.org/kali-2024.4/kali-linux-2024.4-qemu-amd64.7z
RAM="16G"
CPU_CORES="8"
qemu-system-x86_64 \
    -enable-kvm \
    -cpu host \
    -m $RAM \
    -smp $CPU_CORES \
    -drive file="$IMG_PATH",format=qcow2 \
    -vga virtio \
    -net nic -net user \
    -boot c \
    -name "Kali-Linux-2024.4"
