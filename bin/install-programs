#!/bin/bash
# Install Used Programs
packages=(
    uv
    electron25-bin
    code
    scrcpy
    gnome-disk-utility
    blender
    inkscape
    audacity
    aseprite
    debtap
    gimp
    evtest
    glfw
    nasm
    newsboat
    prusa-slicer
    vesktop
    dust
    prismlauncher-qt5-bin
    raylib
    croc
)
for package in "${packages[@]}"; do
    if ! yay -Q $package > /dev/null 2>&1; then
        echo "Installing $package..."
        yes "" | yay -S --needed $package
    else
        echo "$package is already installed."
    fi
done
